<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.opl_grp9_proj.HelloViewController" stylesheets="@login_style.css">
    <!-- Root container, background color set by the .root style in CSS -->
    <AnchorPane fx:id="root" prefWidth="600" prefHeight="400">
        <!-- Subtitle -->
        <Text fx:id="subTitle" text="Stock Management" layoutX="250" layoutY="100" styleClass="sub_title" />

        <!-- Username label and TextField -->
        <Text text="Username" layoutX="100" layoutY="150" styleClass="label-text"/>
        <TextField fx:id="usernameField" layoutX="200" layoutY="145" promptText="Enter username"/>

        <!-- Password label and PasswordField -->
        <Text text="Password" layoutX="100" layoutY="200" styleClass="label-text"/>
        <PasswordField fx:id="passwordField" layoutX="200" layoutY="195" promptText="Enter password"/>

        <!-- Login button with action -->
        <Button fx:id="okayButton" text="Login" layoutX="250" layoutY="250" styleClass="add-stock-button" onAction="#handleOkayButton"/>
    </AnchorPane>
</AnchorPane>
