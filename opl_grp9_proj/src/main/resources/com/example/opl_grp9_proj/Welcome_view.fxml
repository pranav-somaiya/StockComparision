<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.opl_grp9_proj.WelcomeController">
    <!-- Welcome message -->
    <Label text="Welcome!" layoutX="50" layoutY="50"/>

    <!-- TextField for entering the stock symbol -->
    <TextField fx:id="stockSymbolField" layoutX="50" layoutY="100" promptText="Enter stock symbol" />

    <!-- Submit Button to fetch the stock data -->
    <Button fx:id="submitButton" text="Submit" layoutX="50" layoutY="150" onAction="#handleSubmitAction" />
</AnchorPane>
